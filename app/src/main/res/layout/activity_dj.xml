<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brianofrim.juqe.DjActivity">

    <TextView
        android:text="DJ Booth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BoothTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:layout_centerHorizontal="true" />

    <!--<Spinner-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="18dp"-->
        <!--android:id="@+id/searchTypeSpinner"-->
        <!--android:entries="@array/search_type_array"-->
        <!--android:layout_below="@+id/searchTextBox"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginStart="18dp" />-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BoothTextView"
        android:layout_above="@+id/goToPoolButton"
        android:layout_marginTop="60dp"
        android:id="@+id/searchResultsList"
        />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searchTextBox"
        android:layout_alignParentEnd="true"
        android:id="@+id/searchButton" />

    <Button
        android:text="View pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/goToPoolButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/searchTextBox"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/BoothTextView"
        android:hint="Search"
        android:textColorHint="@color/black"/>

</RelativeLayout>
